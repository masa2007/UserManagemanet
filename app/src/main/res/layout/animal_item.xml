<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvAnimaltype"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Animaltype"
            app:layout_constraintBottom_toBottomOf="@+id/tvAnimalPrice"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvAnimalPrice"
            app:layout_constraintTop_toTopOf="@+id/tvAnimalPrice"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tvAnimalPrice"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="28dp"
            android:layout_weight="1"
            android:text="AnimalPrice"
            app:layout_constraintEnd_toStartOf="@+id/tvAnimaltype"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>